<h1>Chats</h1>
<table class="table table-dark table-striped">
  <thead>
    <tr>
      <th scope="col">ID</th>
      <th scope="col">Sender ID</th>
      <th scope="col">Receiver ID</th>
      <th scope="col">Createed At</th>
      <th scope="col">Update At</th>
      <th scope="col">Show</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td><%= chat.sender_id %></td>
        <td><%= chat.receiver_id %></td>
        <td><%= chat.created_at %></td>
        <td><%= chat.updated_at %></td>
        <td><%= link_to 'Show', chat_path(chat) %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Chat', new_chat_path, class: 'btn btn-primary' %>