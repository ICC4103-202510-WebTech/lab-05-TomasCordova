<h1 class="mb-4">Chats</h1>

<table class="table table-dark table-striped table-bordered">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>Sender</th>
      <th>Receiver</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @chats.each do |chat| %>
      <tr>
        <td><%= chat.id %></td>
        <td><%= chat.sender.email %></td>
        <td><%= chat.receiver.email %></td>
        <td><%= chat.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= chat.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to 'Show', chat_path(chat), class: "btn btn-sm btn-info mb-1" %><br>
          <%= link_to 'Edit', edit_chat_path(chat), class: "btn btn-sm btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to 'New Chat', new_chat_path, class: 'btn btn-primary mt-3' %>
