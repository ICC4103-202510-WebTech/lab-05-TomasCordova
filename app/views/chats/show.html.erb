<h1>Chat Details</h1>

<div class="card mt-4">
  <div class="card-body">
    <p class="card-text">
      <strong>Sender:</strong> <%= @chat.sender.email %><br>
      <strong>Receiver:</strong> <%= @chat.receiver.email %><br>
      <strong>Created:</strong> <%= @chat.created_at.strftime("%Y-%m-%d %H:%M") %><br>
      <strong>Updated:</strong> <%= @chat.updated_at.strftime("%Y-%m-%d %H:%M") %>
    </p>

    <%= link_to "Edit Chat", edit_chat_path(@chat), class: "btn btn-warning me-2" %>
    <%= link_to "Back to Chats", chats_path, class: "btn btn-secondary" %>
  </div>
</div>

<hr>

<h3>Messages in this Chat</h3>
<ul class="list-group">
  <% @chat.messages.each do |message| %>
    <li class="list-group-item">
      <strong><%= message.user.email %>:</strong> <%= message.body %>
      <span class="float-end">
        <%= link_to "Show", message_path(message), class: "btn btn-sm btn-outline-info me-1" %>
        <%= link_to "Edit", edit_message_path(message), class: "btn btn-sm btn-outline-warning" %>
      </span>
    </li>
  <% end %>
</ul>
