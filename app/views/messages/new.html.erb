<h1>New Message</h1>

<% if @message.errors.any? %>
  <div class="alert alert-danger" role="alert">
    <h4 class="alert-heading">Please fix the following errors:</h4>
    <ul>
      <% @message.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @message) do |f| %>
  <div class="form-group mb-3">
    <%= f.label :chat_id, "Chat" %>
    <%= f.select :chat_id, Chat.all.map { |c| ["Chat ##{c.id}: #{c.sender.email} â†” #{c.receiver.email}", c.id] }, { prompt: "Select chat" }, class: "form-control" %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :user_id, "Author" %>
    <%= f.select :user_id, User.all.map { |u| [u.email, u.id] }, { prompt: "Select author" }, class: "form-control" %>
  </div>
  <div class="form-group mb-3">
    <%= f.label :body, "Message" %>
    <%= f.text_area :body, class: "form-control" %>
  </div>
  <%= f.submit "Send Message", class: "btn btn-primary" %>
<% end %>
