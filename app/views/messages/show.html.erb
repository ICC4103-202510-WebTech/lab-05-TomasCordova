<h1>Message Details</h1>

<div class="card mt-4">
  <div class="card-body">
    <h5 class="card-title">Author: <%= @message.user.email %></h5>
    <p class="card-text">
      <strong>Chat:</strong>
      <%= link_to "Chat between #{@message.chat.sender.email} and #{@message.chat.receiver.email}",
                  chat_path(@message.chat) %><br>
      <strong>Body:</strong> <%= @message.body %><br>
      <strong>Created:</strong> <%= @message.created_at.strftime("%Y-%m-%d %H:%M") %><br>
      <strong>Updated:</strong> <%= @message.updated_at.strftime("%Y-%m-%d %H:%M") %>
    </p>

    <%= link_to "Edit Message", edit_message_path(@message), class: "btn btn-warning me-2" %>
    <%= link_to "Back to Messages", messages_path, class: "btn btn-secondary" %>
  </div>
</div>
