<h1 class="mb-4">Users</h1>

<table class="table table-dark table-striped table-bordered">
  <thead class="table-light">
    <tr>
      <th>ID</th>
      <th>Email</th>
      <th>First Name</th>
      <th>Last Name</th>
      <th>Messages Sent</th>
      <th>Created At</th>
      <th>Updated At</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.id %></td>
        <td><%= user.email %></td>
        <td><%= user.first_name %></td>
        <td><%= user.last_name %></td>
        <td><%= user.messages.count %></td>
        <td><%= user.created_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td><%= user.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
        <td>
          <%= link_to 'Show', user_path(user), class: "btn btn-sm btn-info mb-1" %><br>
          <%= link_to 'Edit', edit_user_path(user), class: "btn btn-sm btn-warning" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to "New User", new_user_path, class: "btn btn-primary mt-3" %>
